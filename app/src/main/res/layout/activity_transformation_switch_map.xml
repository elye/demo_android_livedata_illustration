<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".MediatorLiveDataActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LiveDataA"
                android:textAlignment="center"
                android:textSize="16sp" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/txt_livedata_a"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="~nothing~"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:custom_color="#DDD"
                app:height_weight="0.8" />

            <Button
                android:id="@+id/btn_livedata_a"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="Generate" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="LiveDataB"
                android:textAlignment="center"
                android:textSize="16sp" />

            <com.elyeproj.loaderviewlibrary.LoaderTextView
                android:id="@+id/txt_livedata_b"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="~nothing~"
                android:textAlignment="center"
                android:textSize="16sp"
                android:textStyle="bold"
                app:custom_color="#DDD"
                app:height_weight="0.8" />

            <Button
                android:id="@+id/btn_livedata_b"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="16dp"
                android:text="Generate" />

        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_live_data"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#EEE">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="No Fragment" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_control_fragment"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="16dp"
        android:text="Add Fragment" />

</LinearLayout>
